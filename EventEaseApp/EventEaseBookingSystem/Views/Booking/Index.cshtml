@model IEnumerable<EventEase.VenueBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Booking</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Event.EventName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Venue.VenueName)</th>
            <th>@Html.DisplayNameFor(model => model.First().BookingDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Event?.EventName</td>
                <td>@item.Venue?.VenueName</td>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
